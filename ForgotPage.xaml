<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EkandidatoApp.ForgotPage"
             Title="ForgotPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource PrimaryGreen}">

    <Grid RowDefinitions="3*,4*">

        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="ekandidato_logo.png"
                   HeightRequest="200"
                   WidthRequest="200"
                   Aspect="AspectFit"/>
        </StackLayout>

        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 0,80,0,0"
                Padding="30">
            <Border.Shadow>
                <Shadow Brush="#000000"
                Offset="5,6"
                Radius="12"
                Opacity="0.90"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="25">

                <Label Text="Forgot Password"
                           FontFamily="Poppins"
                           FontSize="35"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"/>

                <VerticalStackLayout>
                    <Label Text="NEW PASSWORD"
                               FontFamily="Poppins"
                               FontSize="12"
                               TextColor="Black"/>
                    <Border Stroke="#D9D9D9"
                                StrokeThickness="1"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 14"
                                Padding="0,0,10,0"
                                Margin="0,5,0,0">
                        <Grid ColumnDefinitions="*,40">
                            <Entry x:Name="FPEntry"
                                       Placeholder="Password"
                                       IsPassword="True"
                                       FontFamily="Poppins"
                                       FontSize="14"
                                       TextColor="Black"
                                       PlaceholderColor="#A0A0A0"
                                       Grid.Column="0"/>
                            <Grid Grid.Column="1"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center">
                                <ImageButton x:Name="FTPasswordButton"
                                         Source="eye_open.png"
                                         BackgroundColor="Transparent"
                                         Clicked="TogglePasswordClicked"
                                         Grid.Column="1"/>
                            </Grid>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="RETYPE PASSWORD"
                               FontFamily="Poppins"
                               FontSize="12"
                               TextColor="Black"/>
                    <Border Stroke="#D9D9D9"
                                StrokeThickness="1"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 14"
                                Padding="0,0,10,0"
                                Margin="0,5,0,0">
                        <Grid ColumnDefinitions="*,40">
                            <Entry x:Name="RFPasswordEntry"
                                       Placeholder="Password"
                                       IsPassword="True"
                                       FontFamily="Poppins"
                                       FontSize="14"
                                       TextColor="Black"
                                       PlaceholderColor="#A0A0A0"
                                       Grid.Column="0"/>
                            <Grid Grid.Column="1"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center">
                                <ImageButton x:Name="RFTPasswordButton"
                                         Source="eye_open.png"
                                         BackgroundColor="Transparent"
                                         Clicked="TogglePasswordClicked"
                                         Grid.Column="1"/>
                            </Grid>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Button Text="Save"
                            FontFamily="Poppins"
                            FontSize="16"
                            TextColor="White"
                            BackgroundColor="#2E7D32"
                            CornerRadius="15"
                            HeightRequest="50"
                            WidthRequest="250"/>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
